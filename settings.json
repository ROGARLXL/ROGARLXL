{
    // " Vim with all enhancements----From GVIM
    //______________________________________     ___    ______________  ___
    //___  __ \_  __ \_  ____/__    |__  __ \    __ |  / /___  _/__   |/  /
    //__  /_/ /  / / /  / __ __  /| |_  /_/ /    __ | / / __  / __  /|_/ / 
    //_  _, _// /_/ // /_/ / _  ___ |  _, _/     __ |/ / __/ /  _  /  / /  
    ///_/ |_| \____/ \____/  /_/  |_/_/ |_|      _____/  /___/  /_/  /_/   
    "vim.easymotion": true,
    //"editor.lineNumbers":"relative",
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.leader": "<space>",
    "vim.autoindent": true,
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-f>": false
    },
    //" -----------------------------------------------------------------------
    //"-------------------------------INSERT MODE-------------------------------
    //" ------------------------------------------------------------------------
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "j"
            ],
            "after": [
                "<Esc>"
            ]
        }
    ],
    //" -----------------------------------------------------------------------
    //"-------------------------------NORMAL MODE-------------------------------
    //" ------------------------------------------------------------------------
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                ";"
            ],
            "after": [
                ":"
            ]
        },
        {
            "before": [
                "<leader>",
                "w"
            ],
            "commands": [
                ":w"
            ]
        },
        {
            "before": [
                "<leader>",
                "q"
            ],
            "commands": [
                ":q"
            ]
        },
        {
            "before": [
                "<leader>",
                "w",
                "q"
            ],
            "commands": [
                ":wq"
            ]
        },
        {
            "before": [
                "<F2>",
            ],
            "commands": [
                ":set relativenumber!"
            ] //vim下相对行号设置命令
        },
        {
            "before": [
                "<space>",
                "<Enter>"
            ],
            "commands": [
                ":nohl"
            ]
        }
    ],
    //" -----------------------------------------------------------------------
    //"-------------------------------VISUAL MODE-------------------------------
    //" ------------------------------------------------------------------------
    "vim.visualModeKeyBindings": []
}
